{
  "version": 4,
  "configurations": [
      {
          "name": "Mac",
          "includePath": [
              "${workspaceFolder}/**",                            // Include workspace headers
              "/opt/homebrew/opt/boost/include",                   // Boost headers
              "/opt/homebrew/opt/openssl@3/include",               // OpenSSL headers
              "/opt/homebrew/opt/openssl@3/include/openssl",       // OpenSSL headers specifically
              "${workspaceFolder}"                                 // Current workspace folder headers
          ],
          "defines": [],
          "intelliSenseMode": "macos-clang-x64",                  // Ensure correct platform and compiler mode
          "compilerPath": "/usr/bin/clang++",                     // Path to clang++
          "cStandard": "c11",                                     // C standard
          "cppStandard": "c++17",                                 // C++ standard
          "browse": {
              "path": [
                  "${workspaceFolder}",
                  "/opt/homebrew/opt/boost/include",            // Boost headers for browsing
                  "/opt/homebrew/opt/openssl@3/include/openssl"  // OpenSSL headers for browsing
              ],
              "limitSymbolsToIncludedHeaders": true
          }
      }
  ]
}
