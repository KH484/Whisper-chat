{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "build",
          "type": "shell",
          "command": "/usr/bin/clang++",
          "args": [
              "-g",
              "-std=c++17",
              "-I/opt/homebrew/opt/boost/include",
              "-I/opt/homebrew/opt/openssl@3/include/openssl",
              "whisper.cpp",
              "-o", "whisper",
              "-L/opt/homebrew/opt/openssl@3/lib",
              "-L/opt/homebrew/opt/boost/lib",
              "-lssl",
              "-lcrypto",
              "-lboost_system",
              "-pthread"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "problemMatcher": ["$gcc"],
          "detail": "Generated task for C++ build"
      }
  ]
}
